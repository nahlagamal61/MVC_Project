@page
@model Bulky_razor_App.Pages.Categories.EditModel


<section class="container">
    <div>
        <h2>
            Edit Category
        </h2>
    </div>
    <form method="post">
        <div class="form-group ">
            <input type="text" class="form-control is-valid" asp-for="Category.Id" hidden>
        </div>
        <div class="form-group has-success">
            <label class="form-label mt-4" asp-for="Category.Name"></label>
            <input type="text" class="form-control is-valid" asp-for="Category.Name">
            <span class="valid-feedback" asp-validation-for="Category.Name"></span>
        </div>

        <div class="form-group has-success">
            <label class="form-label mt-4" asp-for="Category.CategoryOrder"></label>
            <input type="number" class="form-control is-valid" asp-for="Category.CategoryOrder">
            <span class="valid-feedback" asp-validation-for="Category.CategoryOrder"></span>
        </div>
        <div class="row mt-1">
            <div class="col-12 col-md-6 ">
                <button type="submit" class="btn btn-dark col-5 ">Update</button>
                <button asp-page="Categories/Index" class="btn btn-secondary border col-5 ">Go To List</button>
            </div>
        </div>
    </form>
</section>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
